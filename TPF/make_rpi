CC := gcc
OPTIONS = -I/usr/local/include -L/usr/local/lib -lSDL -lwiringPi -Wall
OBJS = libaudio.o main.o simon.o rpi_input.o rpi_output.o rpi_setup.o
SRC = libaudio.c main.c simon.c rpi_input.c rpi_output.c rpi_setup.c
HEADERS = libaudio.h main.h simon.h rpi_input.h rpi_output.h rpi_setup.h


simon:${OBJS}
	${CC} ${OPTIONS} ${OBJS} -o simon

${OBJS}: ${SRC} ${HEADERS}
	${CC} ${OPTIONS} -c ${SRC}

clean:
	rm *.o